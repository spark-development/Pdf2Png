{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "strict": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
